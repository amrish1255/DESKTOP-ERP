@{
    ViewData["Title"] = "Sales Billing";
}

<section class="erp-section">
    <div class="section-header">
        <h1>Sales Billing with GST</h1>
        <div class="section-actions">
            <a class="btn btn-primary" asp-action="Create">New Invoice</a>
            <button type="button" class="btn btn-outline-secondary">Download GST JSON</button>
        </div>
    </div>

    <form class="filter-panel row g-3 align-items-end" method="get">
        <div class="col-lg-3">
            <label class="form-label" for="InvoiceNumber">Invoice #</label>
            <input class="form-control" id="InvoiceNumber" name="invoiceNumber" placeholder="Search invoice number" />
        </div>
        <div class="col-lg-3">
            <label class="form-label" for="Customer">Customer</label>
            <input class="form-control" id="Customer" name="customer" placeholder="Customer name" />
        </div>
        <div class="col-lg-2">
            <label class="form-label" for="FromDate">From</label>
            <input class="form-control" id="FromDate" type="date" name="fromDate" />
        </div>
        <div class="col-lg-2">
            <label class="form-label" for="ToDate">To</label>
            <input class="form-control" id="ToDate" type="date" name="toDate" />
        </div>
        <div class="col-lg-2 d-flex gap-2">
            <button type="submit" class="btn btn-primary flex-fill">Filter</button>
            <button type="reset" class="btn btn-link flex-fill">Reset</button>
        </div>
    </form>

    <div class="table-responsive mt-4">
        <table class="table table-striped table-hover erp-table">
            <thead>
                <tr>
                    <th scope="col">Invoice #</th>
                    <th scope="col">Date</th>
                    <th scope="col">Customer</th>
                    <th scope="col">GST (%)</th>
                    <th scope="col">Taxable Amount</th>
                    <th scope="col">GST Amount</th>
                    <th scope="col">Total</th>
                    <th scope="col" class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>INV-2026-00125</td>
                    <td>30 Jan 2026</td>
                    <td>Sunrise Traders</td>
                    <td>18%</td>
                    <td>₹ 1,05,000.00</td>
                    <td>₹ 18,900.00</td>
                    <td class="fw-semibold">₹ 1,23,900.00</td>
                    <td class="text-end">
                        <div class="table-actions">
                            <button type="button" class="btn btn-sm btn-outline-primary">View</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Email</button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>INV-2026-00124</td>
                    <td>29 Jan 2026</td>
                    <td>Metro Retail Mart</td>
                    <td>12%</td>
                    <td>₹ 68,400.00</td>
                    <td>₹ 8,208.00</td>
                    <td class="fw-semibold">₹ 76,608.00</td>
                    <td class="text-end">
                        <div class="table-actions">
                            <button type="button" class="btn btn-sm btn-outline-primary">View</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Email</button>
                        </div>
                    </td>
                </tr>
                <tr>
                    <td>INV-2026-00123</td>
                    <td>29 Jan 2026</td>
                    <td>Global Supply Hub</td>
                    <td>5%</td>
                    <td>₹ 45,000.00</td>
                    <td>₹ 2,250.00</td>
                    <td class="fw-semibold">₹ 47,250.00</td>
                    <td class="text-end">
                        <div class="table-actions">
                            <button type="button" class="btn btn-sm btn-outline-primary">View</button>
                            <button type="button" class="btn btn-sm btn-outline-secondary">Email</button>
                        </div>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</section>
