@{
    ViewData["Title"] = "GST Report";
}

<section class="erp-section">
    <div class="section-header">
        <div>
            <h1>GST Report</h1>
            <p class="text-muted mb-0">Review GSTR-1 ready data with summary by tax rate and supply type.</p>
        </div>
        <div class="section-actions">
            <button type="button" class="btn btn-primary">Download JSON</button>
            <button type="button" class="btn btn-outline-secondary">Export Excel</button>
        </div>
    </div>

    <form class="filter-panel row g-3 align-items-end" method="get">
        <div class="col-lg-3">
            <label class="form-label" for="ReturnPeriod">Return Period</label>
            <input class="form-control" id="ReturnPeriod" name="returnPeriod" placeholder="Jan 2026" />
        </div>
        <div class="col-lg-3">
            <label class="form-label" for="ReturnType">Return Type</label>
            <select class="form-select" id="ReturnType" name="returnType">
                <option value="Monthly">Monthly</option>
                <option value="Quarterly">Quarterly</option>
            </select>
        </div>
        <div class="col-lg-3">
            <label class="form-label" for="Branch">Branch</label>
            <select class="form-select" id="Branch" name="branch">
                <option value="">All branches</option>
                <option value="Central">Central Branch</option>
                <option value="Warehouse">Warehouse 2</option>
                <option value="Retail">Retail Hub</option>
            </select>
        </div>
        <div class="col-lg-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary flex-fill">Generate</button>
            <button type="reset" class="btn btn-link flex-fill">Reset</button>
        </div>
    </form>

    <div class="row g-4 mt-1">
        <div class="col-md-4">
            <div class="kpi-tile">
                <span class="kpi-label">Total Taxable Sales</span>
                <span class="kpi-value text-primary">₹ 42,35,600</span>
                <span class="kpi-trend text-muted">Includes outward supplies</span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="kpi-tile">
                <span class="kpi-label">GST Liability</span>
                <span class="kpi-value text-danger">₹ 7,62,408</span>
                <span class="kpi-trend text-success">▲ 5% vs last period</span>
            </div>
        </div>
        <div class="col-md-4">
            <div class="kpi-tile">
                <span class="kpi-label">Nil Rated / Exempt</span>
                <span class="kpi-value text-success">₹ 1,20,500</span>
                <span class="kpi-trend text-muted">Gross sales without GST</span>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h2 class="card-title mb-0">Tax Rate Summary</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-hover erp-table">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">GST Rate</th>
                            <th scope="col" class="text-end">Taxable Value</th>
                            <th scope="col" class="text-end">CGST</th>
                            <th scope="col" class="text-end">SGST</th>
                            <th scope="col" class="text-end">IGST</th>
                            <th scope="col" class="text-end">Total Tax</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>5%</td>
                            <td class="text-end">₹ 6,80,000.00</td>
                            <td class="text-end">₹ 17,000.00</td>
                            <td class="text-end">₹ 17,000.00</td>
                            <td class="text-end">₹ 0.00</td>
                            <td class="text-end fw-semibold">₹ 34,000.00</td>
                        </tr>
                        <tr>
                            <td>12%</td>
                            <td class="text-end">₹ 11,25,600.00</td>
                            <td class="text-end">₹ 67,536.00</td>
                            <td class="text-end">₹ 67,536.00</td>
                            <td class="text-end">₹ 0.00</td>
                            <td class="text-end fw-semibold">₹ 1,35,072.00</td>
                        </tr>
                        <tr>
                            <td>18%</td>
                            <td class="text-end">₹ 24,30,000.00</td>
                            <td class="text-end">₹ 2,18,700.00</td>
                            <td class="text-end">₹ 2,18,700.00</td>
                            <td class="text-end">₹ 0.00</td>
                            <td class="text-end fw-semibold">₹ 4,37,400.00</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="card mt-4">
        <div class="card-header">
            <h2 class="card-title mb-0">HSN Summary</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover erp-table">
                    <thead>
                        <tr>
                            <th scope="col">HSN</th>
                            <th scope="col">Description</th>
                            <th scope="col" class="text-end">UQC</th>
                            <th scope="col" class="text-end">Quantity</th>
                            <th scope="col" class="text-end">Taxable Value</th>
                            <th scope="col" class="text-end">Tax Amount</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>94054010</td>
                            <td>LED Lighting Fixtures</td>
                            <td class="text-end">NOS</td>
                            <td class="text-end">320</td>
                            <td class="text-end">₹ 8,96,000.00</td>
                            <td class="text-end">₹ 1,61,280.00</td>
                        </tr>
                        <tr>
                            <td>94036000</td>
                            <td>Wooden Furniture</td>
                            <td class="text-end">NOS</td>
                            <td class="text-end">145</td>
                            <td class="text-end">₹ 12,50,600.00</td>
                            <td class="text-end">₹ 2,25,108.00</td>
                        </tr>
                        <tr>
                            <td>72111990</td>
                            <td>Flat-Rolled Steel Products</td>
                            <td class="text-end">KG</td>
                            <td class="text-end">5,600</td>
                            <td class="text-end">₹ 9,48,000.00</td>
                            <td class="text-end">₹ 1,13,760.00</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
