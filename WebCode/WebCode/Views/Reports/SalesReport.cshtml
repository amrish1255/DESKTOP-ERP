@{
    ViewData["Title"] = "Sales Report";
}

<section class="erp-section">
    <div class="section-header">
        <div>
            <h1>Sales Report</h1>
            <p class="text-muted mb-0">Analyze sales performance with GST breakup and branch insights.</p>
        </div>
        <div class="section-actions">
            <button type="button" class="btn btn-primary">Export Excel</button>
            <button type="button" class="btn btn-outline-secondary">Export PDF</button>
        </div>
    </div>

    <form class="filter-panel row g-3 align-items-end" method="get">
        <div class="col-lg-3">
            <label class="form-label" for="FromDate">From</label>
            <input class="form-control" id="FromDate" type="date" name="fromDate" />
        </div>
        <div class="col-lg-3">
            <label class="form-label" for="ToDate">To</label>
            <input class="form-control" id="ToDate" type="date" name="toDate" />
        </div>
        <div class="col-lg-3">
            <label class="form-label" for="Branch">Branch</label>
            <select class="form-select" id="Branch" name="branch">
                <option value="">All branches</option>
                <option value="Central">Central Branch</option>
                <option value="Warehouse">Warehouse 2</option>
                <option value="Retail">Retail Hub</option>
            </select>
        </div>
        <div class="col-lg-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary flex-fill">Run Report</button>
            <button type="reset" class="btn btn-link flex-fill">Reset</button>
        </div>
    </form>

    <div class="card mt-4">
        <div class="card-header">
            <h2 class="card-title mb-0">Sales Summary</h2>
        </div>
        <div class="card-body">
            <div class="row g-4">
                <div class="col-md-3">
                    <div class="kpi-tile">
                        <span class="kpi-label">Invoices</span>
                        <span class="kpi-value text-primary">126</span>
                        <span class="kpi-trend text-success">▲ 9 vs last period</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="kpi-tile">
                        <span class="kpi-label">Taxable Value</span>
                        <span class="kpi-value text-primary">₹ 42,35,600</span>
                        <span class="kpi-trend text-success">▲ 6%</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="kpi-tile">
                        <span class="kpi-label">GST Collected</span>
                        <span class="kpi-value text-success">₹ 7,62,408</span>
                        <span class="kpi-trend text-muted">Incl. CGST &amp; SGST</span>
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="kpi-tile">
                        <span class="kpi-label">Total Amount</span>
                        <span class="kpi-value text-danger">₹ 49,98,008</span>
                        <span class="kpi-trend text-success">▲ 4%</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="table-responsive mt-4">
        <table class="table table-striped table-hover erp-table">
            <thead>
                <tr>
                    <th scope="col">Date</th>
                    <th scope="col">Invoice #</th>
                    <th scope="col">Customer</th>
                    <th scope="col" class="text-end">Taxable</th>
                    <th scope="col" class="text-end">GST</th>
                    <th scope="col" class="text-end">Total</th>
                    <th scope="col">Branch</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>30 Jan 2026</td>
                    <td>INV-2026-00125</td>
                    <td>Sunrise Traders</td>
                    <td class="text-end">₹ 1,05,000.00</td>
                    <td class="text-end">₹ 18,900.00</td>
                    <td class="text-end fw-semibold">₹ 1,23,900.00</td>
                    <td>Central Branch</td>
                </tr>
                <tr>
                    <td>29 Jan 2026</td>
                    <td>INV-2026-00124</td>
                    <td>Metro Retail Mart</td>
                    <td class="text-end">₹ 68,400.00</td>
                    <td class="text-end">₹ 8,208.00</td>
                    <td class="text-end fw-semibold">₹ 76,608.00</td>
                    <td>Retail Hub</td>
                </tr>
                <tr>
                    <td>29 Jan 2026</td>
                    <td>INV-2026-00123</td>
                    <td>Global Supply Hub</td>
                    <td class="text-end">₹ 45,000.00</td>
                    <td class="text-end">₹ 2,250.00</td>
                    <td class="text-end fw-semibold">₹ 47,250.00</td>
                    <td>Warehouse 2</td>
                </tr>
            </tbody>
        </table>
    </div>
</section>
