@{
    ViewData["Title"] = "Outstanding Report";
}

<section class="erp-section">
    <div class="section-header">
        <div>
            <h1>Outstanding Report</h1>
            <p class="text-muted mb-0">Monitor receivables aging and prioritize payment follow-ups.</p>
        </div>
        <div class="section-actions">
            <button type="button" class="btn btn-primary">Export Excel</button>
            <button type="button" class="btn btn-outline-secondary">Send Reminders</button>
        </div>
    </div>

    <form class="filter-panel row g-3 align-items-end" method="get">
        <div class="col-lg-3">
            <label class="form-label" for="AsOnDate">As on Date</label>
            <input class="form-control" id="AsOnDate" type="date" name="asOnDate" />
        </div>
        <div class="col-lg-3">
            <label class="form-label" for="Customer">Customer</label>
            <input class="form-control" id="Customer" name="customer" placeholder="Search customer" />
        </div>
        <div class="col-lg-3">
            <label class="form-label" for="Branch">Branch</label>
            <select class="form-select" id="Branch" name="branch">
                <option value="">All branches</option>
                <option value="Central">Central Branch</option>
                <option value="Warehouse">Warehouse 2</option>
                <option value="Retail">Retail Hub</option>
            </select>
        </div>
        <div class="col-lg-3 d-flex gap-2">
            <button type="submit" class="btn btn-primary flex-fill">Apply</button>
            <button type="reset" class="btn btn-link flex-fill">Reset</button>
        </div>
    </form>

    <div class="card mt-4">
        <div class="card-header">
            <h2 class="card-title mb-0">Aging Summary</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered erp-table">
                    <thead class="table-light">
                        <tr>
                            <th scope="col">Bucket</th>
                            <th scope="col" class="text-end">Amount</th>
                            <th scope="col" class="text-end">% of Total</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td>0 - 30 Days</td>
                            <td class="text-end">₹ 7,80,500.00</td>
                            <td class="text-end">42%</td>
                        </tr>
                        <tr>
                            <td>31 - 60 Days</td>
                            <td class="text-end">₹ 5,25,300.00</td>
                            <td class="text-end">28%</td>
                        </tr>
                        <tr>
                            <td>61 - 90 Days</td>
                            <td class="text-end">₹ 3,15,800.00</td>
                            <td class="text-end">17%</td>
                        </tr>
                        <tr>
                            <td>90+ Days</td>
                            <td class="text-end text-danger fw-semibold">₹ 2,19,300.00</td>
                            <td class="text-end">13%</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <div class="table-responsive mt-4">
        <table class="table table-striped table-hover erp-table">
            <thead>
                <tr>
                    <th scope="col">Invoice #</th>
                    <th scope="col">Invoice Date</th>
                    <th scope="col">Customer</th>
                    <th scope="col" class="text-end">Invoice Amount</th>
                    <th scope="col" class="text-end">Received</th>
                    <th scope="col" class="text-end">Balance</th>
                    <th scope="col">Bucket</th>
                    <th scope="col" class="text-end">Days Overdue</th>
                    <th scope="col" class="text-end">Contact</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>INV-2025-00985</td>
                    <td>10 Dec 2025</td>
                    <td>Sunrise Traders</td>
                    <td class="text-end">₹ 96,500.00</td>
                    <td class="text-end">₹ 45,000.00</td>
                    <td class="text-end text-danger fw-semibold">₹ 51,500.00</td>
                    <td>61 - 90 Days</td>
                    <td class="text-end">51</td>
                    <td class="text-end">
                        <button type="button" class="btn btn-sm btn-outline-primary">Follow Up</button>
                    </td>
                </tr>
                <tr>
                    <td>INV-2025-01012</td>
                    <td>28 Dec 2025</td>
                    <td>Global Supply Hub</td>
                    <td class="text-end">₹ 1,20,800.00</td>
                    <td class="text-end">₹ 0.00</td>
                    <td class="text-end text-danger fw-semibold">₹ 1,20,800.00</td>
                    <td>31 - 60 Days</td>
                    <td class="text-end">33</td>
                    <td class="text-end">
                        <button type="button" class="btn btn-sm btn-outline-primary">Follow Up</button>
                    </td>
                </tr>
                <tr>
                    <td>BILL-2025-00076</td>
                    <td>05 Jan 2026</td>
                    <td>Metro Retail Mart</td>
                    <td class="text-end">₹ 85,400.00</td>
                    <td class="text-end">₹ 60,000.00</td>
                    <td class="text-end text-warning fw-semibold">₹ 25,400.00</td>
                    <td>0 - 30 Days</td>
                    <td class="text-end">25</td>
                    <td class="text-end">
                        <button type="button" class="btn btn-sm btn-outline-primary">Follow Up</button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</section>
